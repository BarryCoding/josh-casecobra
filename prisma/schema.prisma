generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Configuration {
  id       String @id @default(cuid())
  imageUrl String
  width    Int
  height   Int

  croppedImageUrl String?
  color           CaseColor?
  model           PhoneModel?
  material        CaseMaterial?
  finish          CaseFinish?
}

enum CaseColor {
  black
  blue
  rose
}

enum PhoneModel {
  iphonex
  iphone11
  iphone12
  iphone13
  iphone14
  iphone15
}

enum CaseMaterial {
  silicone
  polycarbonate
}

enum CaseFinish {
  smooth
  textured
}

model User {
  id      String @id @default(cuid())
  kindeId String
  email   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

